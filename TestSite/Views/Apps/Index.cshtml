
@model TestSite.ViewModels.AppsViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>



<h2>Products</h2>




@if (Model.Apps.Count == 0)
{
    <p> No Products</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Products</th>
                <th>Product's ID</th>
                <th>Product's Name</th>



            </tr>


        </thead>


        <tbody>


            @foreach (var apps in Model.Apps)
            {
                <tr>
                    <td>@Html.ActionLink(apps.Name, "Details", "Apps", new { id = apps.Id }, null)</td>
                    <td>@apps.AppType.Id</td>>
                    <td>@apps.AppType.Name</td>>

                </tr>

            }


        </tbody>

    </table>

}

