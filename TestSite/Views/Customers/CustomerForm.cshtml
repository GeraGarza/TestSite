@model TestSite.ViewModels.CustomerFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>



@using (Html.BeginForm("Save", "Customers"))
{
    <div class=" = " form-group">


        <!-- Name -->

        @Html.LabelFor(m => m.Customer.Name)

        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })


        <!-- Birthdate -->

        @Html.LabelFor(m => m.Customer.Birthdate)

        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })




        <!-- Select Membership Type -->


        @Html.LabelFor(m => m.Customer.MembershipTypeId)

        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipType, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })


        <!-- is Member -->

        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.Customer.isMember) Become Member
            </label>
        </div>


    </div>

    @Html.HiddenFor(m => m.Customer.Id)

    <button type="submit" class="btn btn-primary">Save</button>



}